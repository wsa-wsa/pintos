{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "thredsbulid",
            "type": "shell",
            "isBackground": true,
            "command":"make qemu-gdb",
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "beginsPattern": ".*Now run 'gdb' in another window.",
                        "endsPattern": "."
                    }
                }
            ],
            "options": {
                "cwd": "${workspaceRoot}/src/threads/build"
            }
        },
        {
            "label": "userprogbulid",
            "type": "shell",
            "isBackground": true,
            "command":"make qemu-gdb",
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "beginsPattern": ".*Now run 'gdb' in another window.",
                        "endsPattern": "."
                    }
                }
            ],
            "options": {
                "cwd": "${workspaceRoot}/src/userprog/build"
            }
        }
    ]
}